// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

// Looking for ways to speed up your queries, or scale easily with your serverless or edge functions?
// Try Prisma Accelerate: https://pris.ly/cli/accelerate-init

generator client {
  provider = "prisma-client-js"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String   @id @unique
  name          String
  email         String   @unique
  emailVerified Boolean
  image         String?
  createdAt     DateTime
  updatedAt     DateTime
  sessionId     String
  session       Session  @relation(fields: [sessionId], references: [id])
}

model Session {
  id        String   @id @unique
  userId    String
  token     String
  expiresAt DateTime
  ipAddress String?
  userAgent String?
  createdAt DateTime
  updatedAt DateTime
  User      User[]
}

model Account {
  id                   String    @id @unique
  userId               String
  accountId            String
  providerId           String
  accessToken          String?
  refreshToken         String?
  refreshTokenExpireAt DateTime?
  accessTokenExpireAt  DateTime?
  scope                String?
  idToken              String
  password             String?
  createdAt            DateTime
  updatedAt            DateTime
}
